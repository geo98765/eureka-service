# ==============================================
# EUREKA SERVER - Environment Variables
# ==============================================

# Puerto del servidor (Render lo asigna automáticamente)
PORT=8761

# Hostname del servidor Eureka (URL pública de Render sin https://)
# Ejemplo: eureka-server-abc123.onrender.com
EUREKA_HOSTNAME=localhost

# Prefer IP address (false para Render)
EUREKA_PREFER_IP=false

# Service URL (por defecto apunta a sí mismo)
EUREKA_SERVICE_URL=http://localhost:8761/eureka/
